<div class="row">
    <div class="col-md-12">
    {{#quiz.isLocked}}
        <h6>{{#str}}subjects_ready_for_distribution, mod_automultiplechoice{{/str}}</h6>
        <a href={{ziplink}}>{{#str}}documents, mod_automultiplechoice{{/str}} (ZIP)</a>
        <div>{{#str}}process_archive, mod_automultiplechoice{{/str}}</div>     
        {{#pdflinks}}
            <a href={{sujet}}>{{#str}}documents, mod_automultiplechoice{{/str}} (PDF)</a>
            <div>{{#str}}process_statements_file, mod_automultiplechoice{{/str}}</div>
            <a href={{catalog}}>{{#str}}catalog, mod_automultiplechoice{{/str}}</a>
            <div>{{#str}}process_catalog_file, mod_automultiplechoice{{/str}}</div>
            <a href={{correction}}>{{#str}}corrections, mod_automultiplechoice{{/str}}</a>
            <div>{{#str}}process_corrections_file, mod_automultiplechoice{{/str}}</div>
        {{/pdflinks}}
        {{#canrestore}}
            <form method="post" action="documents.php">
                <input type="hidden" value="restore" name="action" />
                <input type="hidden" value={{quiz.id}} name="a" />
                <button class="btn btn-danger" type="submit">{{#str}}documents_restore_original_version, mod_automultiplechoice{{/str}}</button>
            </form>
        {{/canrestore}}
    {{/quiz.isLocked}}
    
    {{^quiz.isLocked}}
        <div>{{#str}}preparatory_documents_ready, mod_automultiplechoice{{/str}}</div>
        {{#pdflinks}}
        <a href={{sujet}}>{{#str}}documents, mod_automultiplechoice{{/str}}</a>
        <div>{{#str}}process_statements_file, mod_automultiplechoice{{/str}}</div>
        <a href={{catalog}}>{{#str}}catalog, mod_automultiplechoice{{/str}}</a>
        <div>{{#str}}process_catalog_file, mod_automultiplechoice{{/str}}</div>
        <a href={{correction}}>{{#str}}corrections, mod_automultiplechoice{{/str}}</a>
        <div>{{#str}}process_corrections_file, mod_automultiplechoice{{/str}}</div>
        {{/pdflinks}}
        <form method="post" action="documents.php">
            <div class="form-group">
                <input type="hidden" value="randomize" name="action" />
                <input type="hidden" value={{quiz.id}} name="a" />
                <button class="btn btn-danger" type="submit">{{#str}}documents_mix_answers_and_questions, mod_automultiplechoice{{/str}}</button>
            </div>
        </form>
        <form class="form" method="post" action="documents.php">
            <div class="form-group">
                <input type="hidden" value="lock" name="action" />
                <input type="hidden" value={{quiz.id}} name="a" />
                <button class="btn btn-danger" type="submit"><i class="fa fa-lock"></i> {{#str}}lock_quiz, mod_automultiplechoice{{/str}}</button>
            </div>
        </form>     
    {{/quiz.isLocked}}
    </div>
</div>  